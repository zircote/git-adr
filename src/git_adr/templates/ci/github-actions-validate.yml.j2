# GitHub Actions workflow for git-adr validation
# Generated by: git adr ci github --validate
#
# This workflow validates ADR structure and format on pull requests.
# Ensures architectural decisions are properly documented before merge.

name: Validate ADRs

on:
  pull_request:
    branches:
      - {{ main_branch | default('main') }}
{% if paths_filter %}
    paths:
{% for path in paths_filter %}
      - '{{ path }}'
{% endfor %}
{% endif %}

permissions:
  contents: read
  pull-requests: write  # For PR comments

jobs:
  validate-adrs:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Fetch git notes
        run: |
          git config --add remote.origin.fetch '+refs/notes/*:refs/notes/*'
          git fetch origin 'refs/notes/*:refs/notes/*' || true
          # Also fetch notes from PR branch
          git fetch origin '+refs/notes/*:refs/notes/*' --prune || true

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '{{ python_version | default("3.11") }}'

      - name: Install git-adr
        run: pip install git-adr{% if git_adr_version %}=={{ git_adr_version }}{% endif %}

      - name: Initialize git-adr
        run: |
          # Initialize local git-adr config even when notes already exist from fetch
          # Required because git-adr commands check adr.initialized config
          git adr init --no-input --force

      - name: Validate ADR format
        id: validate
        run: |
          # Validate all ADRs
          ERRORS=""

          # Check each ADR has required sections
          for adr in $(git adr list --format json | jq -r '.[].id'); do
            content=$(git adr show "$adr" --format markdown 2>/dev/null || echo "")

            if [ -z "$content" ]; then
              ERRORS="${ERRORS}ADR $adr: Cannot read content\n"
              continue
            fi

            # Check for required sections
            if ! echo "$content" | grep -qi "## Status"; then
              ERRORS="${ERRORS}ADR $adr: Missing Status section\n"
            fi

            if ! echo "$content" | grep -qi "## Context"; then
              ERRORS="${ERRORS}ADR $adr: Missing Context section\n"
            fi

            if ! echo "$content" | grep -qi "## Decision"; then
              ERRORS="${ERRORS}ADR $adr: Missing Decision section\n"
            fi
          done

          if [ -n "$ERRORS" ]; then
            echo "VALIDATION_ERRORS<<EOF" >> $GITHUB_OUTPUT
            echo -e "$ERRORS" >> $GITHUB_OUTPUT
            echo "EOF" >> $GITHUB_OUTPUT
            echo "has_errors=true" >> $GITHUB_OUTPUT
          else
            echo "has_errors=false" >> $GITHUB_OUTPUT
          fi

{% if require_adr_for_changes %}
      - name: Check for architecture changes
        id: arch_check
        run: |
          # Get changed files in PR
          CHANGED_FILES=$(git diff --name-only origin/{{ main_branch | default('main') }}...HEAD)

          # Check if any critical paths changed
          NEEDS_ADR=false
{% for critical_path in critical_paths | default(['src/', 'lib/', 'api/']) %}
          if echo "$CHANGED_FILES" | grep -q "^{{ critical_path }}"; then
            NEEDS_ADR=true
          fi
{% endfor %}

          echo "needs_adr=$NEEDS_ADR" >> $GITHUB_OUTPUT

          if [ "$NEEDS_ADR" = "true" ]; then
            # Check if any ADRs were added/modified
            ADR_COUNT=$(git adr list --format json 2>/dev/null | jq '. | length' || echo 0)
            PREV_ADR_COUNT=$(git checkout origin/{{ main_branch | default('main') }} -- 2>/dev/null && git adr list --format json 2>/dev/null | jq '. | length' || echo 0)
            git checkout - 2>/dev/null || true

            if [ "$ADR_COUNT" -le "$PREV_ADR_COUNT" ]; then
              echo "Architecture changes detected but no new ADRs found."
              echo "Consider documenting your decision with: git adr new \"Title\""
            fi
          fi

{% endif %}
      - name: Post validation results
        if: always()
        uses: actions/github-script@v7
        with:
          script: |
            const hasErrors = '{% raw %}${{ steps.validate.outputs.has_errors }}{% endraw %}' === 'true';
            const errors = `{% raw %}${{ steps.validate.outputs.VALIDATION_ERRORS }}{% endraw %}`;

            let body = '## ADR Validation Results\n\n';

            if (hasErrors) {
              body += '### Validation Errors Found\n\n';
              body += '```\n' + errors + '```\n\n';
              body += 'Please fix these issues before merging.\n';
            } else {
              body += 'All ADRs passed validation.\n';
            }

            // Find existing comment
            const { data: comments } = await github.rest.issues.listComments({
              owner: context.repo.owner,
              repo: context.repo.repo,
              issue_number: context.issue.number,
            });

            const botComment = comments.find(c =>
              c.user.type === 'Bot' && c.body.includes('ADR Validation Results')
            );

            if (botComment) {
              await github.rest.issues.updateComment({
                owner: context.repo.owner,
                repo: context.repo.repo,
                comment_id: botComment.id,
                body: body
              });
            } else {
              await github.rest.issues.createComment({
                owner: context.repo.owner,
                repo: context.repo.repo,
                issue_number: context.issue.number,
                body: body
              });
            }

      - name: Fail if validation errors
        if: {% raw %}${{ steps.validate.outputs.has_errors == 'true' }}{% endraw %}
        run: |
          echo "ADR validation failed. See PR comment for details."
          exit 1
